<div class='login-box'>
  <a href='#'><i class='icofont icofont-close'></i></a>
  <form id='login-form' class='login-form'>
    <h2>{{__ 'LOGIN'}}</h2>
    <div class='input-wrap'>
      <h6>{{__ 'EMAIL ADDRESS'}}</h6>
      <input type='email' name='email' />
      <span class='form-message'></span>
    </div>
    <div class='input-wrap'>
      <h6>{{__ 'PASSWORD'}}</h6>
      <input type='password' name='password' />
      <span class='form-message'></span>
    </div>
    <div class='signup-switch'>
      <span>{{__ 'SIGN UP'}}</span>
    </div>
    <input type='submit' class='theme-btn' value='{{__ "LOGIN"}}' />
    <div class='forgot-password text-center'>
      <span>{{__ 'FORGOT PASSWORD?'}}</span>
    </div>
    <span>{{__ 'Or Via'}}</span>
    <div class='login-social'>
      <a><i class='fa-brands fa-facebook-f'></i></a>
      <a href='' id='btn-login-google'><i class='fa-brands fa-google'></i></a>
    </div>
  </form>
  <form id='register-form' class='login-form hide'>
    <h2>{{__ 'SIGN UP'}}</h2>
    <div class='input-wrap'>
      <h6>{{__ 'EMAIL ADDRESS'}}</h6>
      <input type='email' name='email' />
      <span class='form-message'></span>
    </div>
    <div class='input-wrap'>
      <h6>{{__ 'FULLNAME'}}</h6>
      <input type='text' name='name' />
      <span class='form-message'></span>
    </div>
    <div class='input-wrap'>
      <h6>{{__ 'PASSWORD'}}</h6>
      <input type='password' name='password' />
      <span class='form-message'></span>
    </div>
    <div class='input-wrap'>
      <h6>{{__ 'CONFIRM PASSWORD'}}</h6>
      <input type='password' name='cf_pass' />
      <span class='form-message'></span>
    </div>
    <div class='login-switch'>
      <span>{{__ 'LOGIN'}}</span>
    </div>
    <input type='submit' class='theme-btn' value='{{__ "SIGN UP"}}' />
  </form>
  <form id='register-pass-form' class='login-form hide'>
    <h2>{{__ 'REGISTER PASSWORD'}}</h2>
    <div class='input-wrap'>
      <h6>{{__ 'PASSWORD'}}</h6>
      <input type='password' name='password' />
      <span class='form-message'></span>
    </div>
    <div class='input-wrap'>
      <h6>{{__ 'CONFIRM PASSWORD'}}</h6>
      <input type='password' name='cf_pass' />
      <span class='form-message'></span>
    </div>
    <input type='submit' class='theme-btn' value='{{__ "REGISTER"}}' />
  </form>
  <form id='forgot-pass-form' class='login-form hide'>
    <h2>{{__ 'RESET PASSWORD'}}</h2>
    <div class='input-wrap'>
      <h6>{{__ 'EMAIL'}}</h6>
      <input type='email' name='email' />
      <span class='form-message'></span>
    </div>
    <input
      type='submit'
      class='theme-btn'
      value='{{__ "SEND EMAIL RESET PASSWORD"}}'
    />
  </form>
</div>
