<div class='home-btn d-none d-sm-block'>
  <a href='/' class='text-white'><i class='mdi mdi-home h1'></i></a>
</div>
<div
  class='row align-items-center justify-content-center content-wrap align-content-center'
>
  <div class='col-lg-4 col-sm-8 col-8'>
    <div class='card card-pages shadow-none mt-4'>
      <div class='card-body'>
        <div class='text-center mt-0 mb-3'>
          <a href='index.html' class='logo logo-admin'>
            <img src='/img/logo.png ' class='mt-3' alt='Logo' height='50' /></a>
          <p class='text-muted w-75 mx-auto mb-4 mt-4'>Enter your email address
            and password to access admin panel.</p>
        </div>
        <form class='form-horizontal mt-4' id='login-admin-form'>
          <div class='form-group'>
            <div class='col-12 input-wrap'>
              <label for='username'>Username</label>
              <input
                class='form-control'
                name='email'
                required=''
                id='username'
                placeholder='Username'
              />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='form-group'>
            <div class='col-12 input-wrap'>
              <label for='password'>Password</label>
              <input
                class='form-control'
                type='password'
                name='password'
                required=''
                id='password'
                placeholder='Password'
              />
              <span class='form-message'></span>
            </div>
          </div>
          <div class='form-group text-center mt-4'>
            <div class='col-12'>
              <button
                class='btn btn-primary btn-block waves-effect waves-light'
                type='submit'
              >Log In</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
